<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PessoasActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPessoas"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/md_text" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/load"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/editOrCreatePessoas"
        android:padding="16dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/firstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:ems="10"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Sobrenome"
                android:inputType="textPersonName"
                android:textColor="@color/md_text"
                android:textColorHint="@color/md_secondary_text_icons" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/btn_salvar"
            android:text="Salvar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/viewPessoas">

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/md_secondary_text_icons"
            android:text="Nome"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Teste"
            android:id="@+id/nome"
            android:textColor="@color/md_text"
            android:layout_marginTop="8dp"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/md_secondary_text_icons"
            android:text="Sobrenome"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Teste"
            android:id="@+id/sobrenome"
            android:textColor="@color/md_text"
            android:layout_marginTop="8dp"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/md_secondary_text_icons"
            android:text="Criado em"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Teste"
            android:id="@+id/criadoEm"
            android:textColor="@color/md_text"
            android:layout_marginTop="8dp"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/md_secondary_text_icons"
            android:text="Atualizado em"/>

        <br.com.unipe.pos.raphael.contatos.custom.ProductSansRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Teste"
            android:id="@+id/atualizadoEm"
            android:textColor="@color/md_text"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>